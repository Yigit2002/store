<div class="flex justify-between items-center mb-6">
  <h1 class="text-3xl font-bold text-gray-800">Ürünlerim</h1>
</div>

<% if @products.any? %>
  <% @products.each do |product| %>
  <br><br>
    <div class="bg-white hover:text-blue-800 hover:bg-blue-100 shadow-md rounded-lg p-6 flex flex-col items-center hover:bg-gray-100 cursor-pointer transition-colors">
      <%= link_to product_path(product), class: "w-full h-full flex flex-col items-center" do %>
        <h3 class="text-lg font-semibold text-gray-800 mb-4 text-center"><%= product.name %></h3>
        <%= image_tag product.featured_image, class: "w-48 h-32 object-cover rounded-md mb-4" %>
        <p class="text-gray-600 mb-4">Stok: <%= product.inventory_count %></p>
        <p class="text-gray-600 mb-4">Fiyat: <%= product.price.present? ? number_to_currency(product.price, unit: " ₺", format: "%n%u", separator: ",", delimiter: ".") : "Belirtilmemiş" %></p>
        <div class="flex justify-center space-x-4">
          <%= link_to "Düzenle", edit_product_path(product), class: "bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded" %>
          <%= button_to "Sil", product_path(product), method: :delete, data: { turbo_confirm: "Emin misin?" }, class: "bg-red-500 hover:bg-red-600 text-white py-2 px-4 rounded" %>
        </div>
      <% end %>
    </div>
  <% end %>
<% else %>
  <p>Henüz satışa koyduğunuz bir ürün bulunmamaktadır.</p>
<% end %>

<%= link_to 'Yeni Ürün Ekle', new_product_path, class: "text-lg text-blue-600 hover:text-blue-800 font-medium transition-colors" %>
