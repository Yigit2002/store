<h1 class="font-bold text-4xl">Satıcı Hesabı Oluştur</h1><br>

<%= form_with(model: @seller, local: true) do |form| %>

  <div class="field">
    <%= form.label :name, "Mağaza/Satıcı Adı" %>
    <%= form.text_field :name, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
    <br>
  </div>

  <div class="field">
    <%= form.label :email, "İletişim E-postası" %>
    <%= form.email_field :email, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
    <br>
  </div>

  <div class="actions">
    <%= form.submit "Satıcı Hesabı Oluştur", class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
  
<% end %>