<h1 class="text-3xl font-bold text-gray-800 mb-6">Yeni Kategori Ekle</h1>

<%= form_with model: @category, url: categories_path, class: "space-y-4" do |form| %>
  <div>
    <%= form.label :name, "Kategori Adı", class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.text_field :name, class: "w-full p-3 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    <% @category.errors.full_messages_for(:name).each do |message| %>
      <p class="text-red-500 text-sm mt-1"><%= message %></p>
    <% end %>
  </div>

  <div>
    <p> ‏‎ </p>
    <%= form.submit "Kategoriyi Ekle", class: "bg-blue-500 text-white px-6 py-3 rounded-md hover:bg-blue-600 transition-colors" %>
  </div>
<% end %>

<p> ‏‎ </p>
<%= link_to "Geri Dön", categories_path, class: "bg-red-500 text-white px-6 py-3 rounded-md hover:bg-blue-600 transition-colors" %>