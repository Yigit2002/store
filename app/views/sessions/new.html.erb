<div class="flex items-center justify-center min-h-[calc(100vh-200px)]">
  <div class="bg-white shadow-lg rounded-lg p-8 w-full max-w-md">
    <h2 class="text-2xl font-bold text-gray-800 text-center mb-6">Giriş Yap</h2>

    <%= form_with url: session_path, method: :post, class: "space-y-6" do |form| %>
      <!-- E-posta Alanı -->
      <div>
        <%= form.label :email, "E-Posta", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.email_field :email_address, value: "", class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder: "Enter your email" %>
      </div>

      <!-- Şifre Alanı -->
      <div>
        <%= form.label :password, "Şifre", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.password_field :password, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder: "Enter your password" %>
      </div>

      <!-- Şifremi Unuttum Linki -->
      <div class="text-right">
        <%= link_to "Şifremi Unuttum", new_password_path, class: "text-sm text-blue-600 hover:text-blue-800 hover:underline" %>
      </div>

      <!-- Giriş Butonu -->
      <div>
        <%= form.submit "Giriş Yap", class: "w-full bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700 transition-colors" %>
      </div>
    <% end %>

    <!-- Kayıt Ol Linki -->
    <p class="text-center text-sm text-gray-600 mt-4">
      Hesabın Yok mu? <%= link_to "Kayıt Ol", new_registration_path, class: "text-blue-600 hover:text-blue-800 hover:underline" %>
    </p>
  </div>
</div>